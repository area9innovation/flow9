import formats/uri3/uri3;

TestCase(input : string, answer : Uri3, href : string);

main() {
	tests = [
		TestCase("http://127.0.0.1",					Uri3("http", "127.0.0.1", 80, [], [], []), "!"),
		TestCase("http://127.0.0.1/", 					Uri3("http", "127.0.0.1", 80, [], [], []), 
				 "http://127.0.0.1"),
		TestCase("https://127.0.0.1/", 					Uri3("https", "127.0.0.1", 443, [], [], []),
				 "https://127.0.0.1"),
		TestCase("ftp://127.0.0.1/", 					Uri3("ftp", "127.0.0.1", 21, [], [], []),
				 "ftp://127.0.0.1"),
		TestCase("file://localhost/usr/include/stdio.h",Uri3("file", "localhost", 0, ["usr","include","stdio.h"], [], []), "!"),
		TestCase("file:///usr/include/stdio.h", 		Uri3("file", "", 0, ["usr","include","stdio.h"], [], []), "!"),
		TestCase("http://10.0.1.8:80",					Uri3("http", "10.0.1.8", 80, [], [], []), 
				 "http://10.0.1.8"),
		TestCase("http://10.0.1.8/index.html",			Uri3("http", "10.0.1.8", 80, ["index.html"], [], []), "!"),
		TestCase("http://10.0.1.8/php/index.php",		Uri3("http", "10.0.1.8", 80, ["php", "index.php"], [], []), "!"),
																					// Note the resources is a path, so it ends with a slash...
		TestCase("http://10.0.1.8/php/resources/",		Uri3("http", "10.0.1.8", 80, ["php", "resources", "/"], [], []), "!"),
		TestCase("http://10.0.1.8:80/index.html",		Uri3("http", "10.0.1.8", 80, ["index.html"], [], []), 
				 "http://10.0.1.8/index.html"),
		TestCase("http://10.0.1.8:80/index.html?name=me",Uri3("http", "10.0.1.8", 80, ["index.html"], [KeyValue("name", "me")], []),
				 "http://10.0.1.8/index.html?name=me"),
		TestCase("http://10.0.1.8/?a=1#frag",			Uri3("http", "10.0.1.8", 80, [], [KeyValue("a", "1")], [KeyValue("", "frag")]), "!"),
		TestCase("http://localhost",					Uri3("http", "localhost", 80, [], [], []), "!"),
		TestCase("http://localhost:80",					Uri3("http", "localhost", 80, [], [], []), 
				 "http://localhost"),
		TestCase("http://www.area9lyceum.com",			Uri3("http", "www.area9lyceum.com", 80, [], [], []), "!"),
		TestCase("http://www.area9lyceum.com/",			Uri3("http", "www.area9lyceum.com", 80, [], [], []), 
				 "http://www.area9lyceum.com"),
		TestCase("https://eu.rhapsode.com/learner.html?new=1&i=soren@area9.dk#home", Uri3("https", "eu.rhapsode.com", 443, ["learner.html"], [KeyValue("new","1"), KeyValue("i", "soren@area9.dk")], [KeyValue("", "home")]), 
				 "https://eu.rhapsode.com/learner.html?new=1&i=soren%40area9.dk#home"),
		TestCase("www.area9lyceum.com/",				Uri3("", "www.area9lyceum.com", 0, [], [], []), 
				 "www.area9lyceum.com"),
		TestCase("www.area9lyceum.com/%41dmin",			Uri3("", "www.area9lyceum.com", 0, ["Admin"], [], []), 
				 "www.area9lyceum.com/Admin"),
		TestCase("www.area9lyceum.com/Admin%20fun",		Uri3("", "www.area9lyceum.com", 0, ["Admin fun"], [], []), 
				 "www.area9lyceum.com/Admin%20fun"),
		TestCase("www.%41rea9lyceum.com",				Uri3("", "www.%41rea9lyceum.com", 0, [], [], []), 
				 "www.%41rea9lyceum.com"),
		TestCase("area9.dk:81/",						Uri3("", "area9.dk", 81, [], [], []), 
				 "area9.dk:81"),
		TestCase("https://area9.dk#url=https://something", Uri3("https", "area9.dk", 443, [], [], [KeyValue("url", "https://something")]), 
				 "https://area9.dk/#url=https%3A%2F%2Fsomething"),
		TestCase("area9.dk#url=https://something", 		Uri3("", "area9.dk", 0, [], [], [KeyValue("url", "https://something")]), 
				 "area9.dk/#url=https%3A%2F%2Fsomething"),
		TestCase("area9.dk?url=https://something", 		Uri3("", "area9.dk", 0, [], [KeyValue("url", "https://something")], []),
				 "area9.dk/?url=https%3A%2F%2Fsomething"),
		TestCase("http://www.area9lyceum.com/?q=1%202",	Uri3("http", "www.area9lyceum.com", 80, [], [KeyValue("q", "1 2")], []), "!"),
		TestCase("http://www.area9lyceum.com/?q=1#f&g=1",Uri3("http", "www.area9lyceum.com", 80, [], [KeyValue("q", "1")], [KeyValue("", "f"), KeyValue("g", "1")]), "!"),
		TestCase("http://www.area9lyceum.com/?q=&p=2#f&g=1",Uri3("http", "www.area9lyceum.com", 80, [], [KeyValue("q", ""), KeyValue("p", "2")], [KeyValue("", "f"), KeyValue("g", "1")]), "!"),
		TestCase("http://www.area9lyceum.com/#tag=value%202",Uri3("http", "www.area9lyceum.com", 80, [], [], [KeyValue("tag", "value 2")]), "!"),
		TestCase("https://216.58.192.68:80/index.php?param1=123&param2=blah#tag", Uri3("https", "216.58.192.68", 80, ["index.php"], [KeyValue("param1","123"), KeyValue("param2","blah")], [KeyValue("","tag")]),
				 "https://216.58.192.68:80/index.php?param1=123&param2=blah#tag"),
		TestCase("https://build.area9innovation.com/health/patient.html?v=%2F123&lang=EN", Uri3("https", "build.area9innovation.com", 443, ["health", "patient.html"], [KeyValue("v", "/123"), KeyValue("lang", "EN")], []), "!"),
		TestCase("HTTPS://build.area9Innovation.com/Health/patient.HTML?v=%2F123&lang=EN", Uri3("https", "build.area9innovation.com", 443, ["Health", "patient.HTML"], [KeyValue("v", "/123"), KeyValue("lang", "EN")], []), 
				 "https://build.area9innovation.com/Health/patient.HTML?v=%2F123&lang=EN"),
		TestCase("",									Uri3("", "", 0, [], [], []), "!"),
		TestCase("/",									Uri3("", "", 0, [], [], []), ""),
		TestCase("file:///C:/foo/bar.html",				Uri3("file", "", 0, ["/", "C:", "foo", "bar.html"], [], []), 
				 "file:///C%3A/foo/bar.html"),
		TestCase("/index.html",							Uri3("", "", 0, ["/", "index.html"], [], []), "!"),
		TestCase("/index.html?a=1&b=2&c=3",				Uri3("", "", 0, ["/", "index.html"], [KeyValue("a", "1"), KeyValue("b","2"), KeyValue("c","3")], []), "!"),
		TestCase("/index.html?#tag",					Uri3("", "", 0, ["/", "index.html"], [], [KeyValue("", "tag")]),
				 "/index.html#tag"),
		TestCase("/index.html?a=1&b=2&c=3#tag",			Uri3("", "", 0, ["/", "index.html"], [KeyValue("a", "1"), KeyValue("b","2"), KeyValue("c","3")], [KeyValue("", "tag")]), "!"),
		TestCase("images/img.gif",						Uri3("", "", 0, ["images", "img.gif"], [], []), "!"),
		TestCase("index",								Uri3("", "", 0, ["index"], [], []), "!"),
		TestCase("index#a=?&b=2",						Uri3("", "", 0, ["index"], [], [KeyValue("a", "?"), KeyValue("b", "2")]), "!"),
		TestCase("//www.area9lyceum.com/",				Uri3("", "www.area9lyceum.com", 0, [], [], []), 
				 "www.area9lyceum.com"),
		TestCase("mailto:something", 					Uri3("mailto", "", 0, ["something"], [], [], []), "!")
	];

	summary = fold(tests, Pair(0,0), \summary, test -> {
		result = uri3(test.input);
		href = uri3GetHref(result);
		hrefExpected = if (test.href == "!") test.input else test.href;
		// Converting a well formed href, must give the same Uri3
		result2 = uri3(href);
		if (result != test.answer || href != hrefExpected || result2 != result) {
			println("ERROR PARSING \"" + test.input + "\"");
			println("   Expected Uri: " + toString(test.answer));
			println("   Got Uri:      " + toString(result));
			println("   Expected Href:" + hrefExpected);
			println("   Got Href:     " + href + "\n");
			if (result2 != result) {
				println("   Got Uri2: " + toString(result2) + "\n");
			}
			Pair(summary.first, summary.second + 1);
		} else {
			println("Success \"" + test.input + "\"");
			println("   Got Uri:      " + toString(result));
			println("   Got Href:     " + href + "\n");
			Pair(summary.first + 1, summary.second);
		}
	});
	println("Test Summary:");
	println("   Successes: " + i2s(summary.first));
	println("   Fails:     " + i2s(summary.second));

	quit(if (summary.second > 0) 1 else 0);
}
