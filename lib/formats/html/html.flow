escapeHtml(s) {
	// & < > " ' as &amp; &lt; &gt; &quot; &#39;
	r = \from,to -> \t -> strReplace(t, from, to);
	s
	|> r("&", "&amp;")
	|> r("<", "&lt;")
	|> r(">", "&gt;")
	|> r("\"", "&quot;")
	|> r("'", "&#39;")
}

escapeHtml2(s) {
	// & < > " ' as &amp; &lt; &gt; &quot; &#39;
	r = \from,to -> \t -> strReplace(t, from, to);
	s
	|> r("&", "&amp;")
	|> r("<", "&lt;")
	|> r(">", "&gt;")
	|> r("\"", "&quot;")
	|> r("'", "&#39;")
    |> r("&amp;nbsp;", "&nbsp;")
    |> r("\n", "<br>")
}

unescapeHtml(s) {
	// & < > " ' as &amp; &lt; &gt; &quot; &#39;
	r = \to, from -> \t -> strReplace(t, from, to);
	s
	|> r("'", "&#39;")
	|> r("\"", "&quot;")
	|> r(">", "&gt;")
	|> r("<", "&lt;")
	|> r("&", "&amp;")
}

