import material/material2tropic;
import material/material;

main() {
	manager = makeMaterialManager([]);
	countB = make(10);
	form = MLines([
		MCols([
			MTextButton("5 items", \-> nextDistinct(countB, 5), [], []),
			MFillX(),
			MTextButton("55 items", \-> nextDistinct(countB, 55), [], []),
		]),
		MFixedY(8.0),
		MCols([
			MText("MDynamicList with MItemsHeights", []),
			MFillX(),
			MText("MDynamicList without MItemsHeights", []),
		]),
		MFixedY(8.0),
		MCols([
			MDynamicList(
				fselect(countB, FLift(\count -> map(reverseA(enumFromTo(1, count)), \i -> MCustomLine(MText(i2s(i), []), [])))),
				[],
				[
					MItemsHeights(\__ -> const(32.0))
				]
			),
			MFillX(),
			MDynamicList(
				fselect(countB, FLift(\count -> map(reverseA(enumFromTo(1, count)), \i -> MCustomLine(MText(i2s(i), []), [])))),
				[],
				[]
			)
		])			
	]);

	mrender(manager, true, form);
} 