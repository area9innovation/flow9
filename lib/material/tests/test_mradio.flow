import material/material_ui;

main() {
	manager = makeMaterialManager([]);
	setRendererType("html");

	caption1 = MBaselineLines([
		MText("Text FIRST LINE", []),
		MText("Text SECOND LINE", [])
	])
	|> MDebugGreen;

	caption2 = MBaselineLines([
		MText("Text FIRST LINE", []),
		MText("Text SECOND LINE", [])
	])
	|> MDebugBlue;

	content = 
		MGroup([
			MBorder4(8., MFrame(0., 0., [MStroke(MRed(500))], TFillXY())),
			MRadios(make(1), [], [caption1, caption2]) |> MLines |> MBorderTop(30.)
		]);

	// mrender(manager, true, content);
	mrenderTo(manager, true, content, Some("flow_root"));
}