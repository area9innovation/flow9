import material/material2tropic;

main() {
	manager = makeMaterialManager([]);
	setRendererType("html");

	content =
		MGroup2(
			MPicture(
				"images/material_test/Kangaroo-Valley-10.jpg",
				[]
			),
			MDragDrop(
				const(10),
				MFilter(
					const([
						BackdropBlur([
							Spread(5.)
						])
					]),
					TCircle(150., [MFill(MBlack()), FillOpacity(0.01)])
				),
				[]
			)
			|> MBorderLeft(500.)
			|> MBorderTop(200.)
		)
		|> (\m -> MBorder4(20., m));

	mrender(manager, true, content);
}