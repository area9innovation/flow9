import material/material2tropic;

main() {
	setLang("en");
	nameB = make("");

	dataB = make([
		Pair("first", "blabla"),
		Pair("second", "foofoo"),
	]);

	m = MLines([
		MTextInput(nameB, [], []),
		MTextButton("ADD", \-> {
			next(dataB, arrayPush(getValue(dataB), Pair(getValue(nameB), "")));
		}, [], []),
		MDynamicDataTable(
			[
				MColumn("Name", "", 100, [MAutoSort()]),
				MColumn("Description", "", 100, []),
			],
			fmap(dataB, \item -> {
				[
					MText(item.first, []),
					MFixed(16.0, 0.),
					MText(item.first, []),
				]
			}),
			[
				MCondensed(true),
			]
		)
	]);


	manager = makeMaterialManager([]);

	mrender(manager, false, m)
}