import material/material2tropic;

main() {
	manager = makeMaterialManager([]);

	button = make(-1);

	fn = ref nop;
	date = make("");

	content =
		MCols2(
			MTextButton("open picker", \ -> ^fn(), [], []),
			MTextInput(
				date,
				[TextInputType(DateType(None(), None())), MWidth(200.)],
				[MOpenDatePickerFn(fn)]
			) ,
		);

	mrender(manager, true, content);
}