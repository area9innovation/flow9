import material/material2tropic;

main() {
	manager = makeMaterialManager([]);

	contentWH = make(WidthHeight(201., 200.));

	timer(5000, \ -> nextDistinct(contentWH, WidthHeight(500., 300.)));

	content =
		MScroll(
			TSized(contentWH)
			|> addTBackground(MGreen(200)),
			TFixed(200., 200.),
			[
				MScrollFadeContent(white, 10.),
				MScrollbars(TScrollbarStyle(materialScrollBar with bar = TBorder4(4., TRoundedFull([Fill(0x888888)], TFillXH(8.))) |> TBorderTop(20.)), materialScrollBar)
			]
		);
	
	mrender(manager, true, content);
}