import material/material2tropic;

main() {
	manager = makeMaterialManager([]);

	contentWH = make(WidthHeight(300., 100.));

	timer(5000, \ -> nextDistinct(contentWH, WidthHeight(300., 380.)));

	content =
		MScroll(
			TSized(contentWH)
			|> addTBackground(MGreen(200)),
			TFixed(200., 200.),
			[
				// TScrollCropByContent(),
				TScrollbarDoNotOverlapContent(),
				// TScrollbarsAdditionalBox(const(WidthHeight(12., 12.)))
			]
		)
		|> MDebugPurple
		|> (\m -> MGroup2(m, TFrame(0., 0., [MStroke(MRed(500))], TFixed(200., 200.))));
	
	mrender(manager, true, content);
}