import material/material2tropic;

main() {
	manager = makeMaterialManager([]);

	scrollContent =
		// TFixed(500., 500.)
		TFixed(800., 800.)
		|> addTBackground(MGreen(200));

	content =
		MScroll(
			scrollContent,
			// TFixed(200., 200.),
			TFillXY(),
			[
				TScrollAxisEnabled(const(false), const(true)),
				TScrollKeysEnabled(const(true)),
				TScrollCropByContent()
			]
		)
		|> MDebugPurple;

	mrender(manager, true, content);
}