import material/material;
import material/material2tropic;

main() {
	manager = makeMaterialManager([]);
	isRtl = make(false);
	paragraphText = const("iutfieru geri fger fehrig erhg irt hrtg ihrthg ihrtghir hihrt gh iihdfjgvlkdfjj rtighirtg hrg i hrthgirtg rt ghrtuh gh rtghirthgirtighrgt hrtghirgh irhgt hrighirhgt ihrtgi irtghrt ighrtighirtugirt g righ irtg ihg rti");
	t =
		MConstruct(
			[
				makeSubscribe(isRtl, \isrtl -> setLang(if (isrtl) "ar" else "en"))
			],
			MLines2(
				MSwitchControl(isRtl, []),
				MLinesA([
					TParagraph(paragraphText, [ParagraphWidth(const(-1.0)), LeftAlign()])
						|> (\m -> MDebug(red, m)),
					TParagraph(paragraphText, [ParagraphWidth(const(-1.0)), RightAlign()])
						|> (\m -> MDebug(green, m)),
					TParagraph(paragraphText, [ParagraphWidth(const(-1.0)), StartAlign()])
						|> (\m -> MDebug(red, m)),
					TParagraph(paragraphText, [ParagraphWidth(const(-1.0)), CenterAlign()])
						|> (\m -> MDebug(green, m)),
					TParagraph(paragraphText, [ParagraphWidth(const(-1.0)), EndAlign()])
						|> (\m -> MDebug(blue, m))
				])
			)
		);
	mrender(manager, true, t);
}
