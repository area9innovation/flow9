import material/material;
import material/material_manager;
import material/material_dialog;

main() {
    manager = makeMaterialManager([]);
    setRendererType("html");

	content =
		MRealHTML(
			"/flow/test_iframe.html",
			const(WidthHeight(500.0, 500.0)),
			[]
		)
		|> (\m -> MGroup([
				MTextButton("CLICK2", \ -> println("ON CLICK2"), [], []) |> MBorderTop(450.) |> MBorderLeft(450.),
				MTextButton("CLICK3", \ -> println("ON CLICK3"), [], []) |> MBorderBottom(200.) |> MBorderRight(16.) |> MAlignBottomRight,
				MTextButton("CLICK", \ -> println("ON CLICK"), [], []) |> MBorderRight(16.) |> MAlignBottomRight,
				m |> MAlignBottomRight,
			])
		);

	mrender(manager, true, content);
}