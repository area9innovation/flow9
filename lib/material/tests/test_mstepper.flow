import material/material2tropic;
import material/material_ui;

main() {
	setRendererType("html");
	manager = makeMaterialManager([]);

	selectedId = make(0);
	fpprint("selectedId")(selectedId);

	expanded = make(true);
	timer(2000, \ -> reverseBehaviour(expanded));

	content = MStepper([
			MStep(
				const("STEP 1"),
				\ -> MText("text from step1", []),
				[MEditableStep(true)],
				[MExpanded(make(true))]
			),
			MStep(
				const("STEP 2"),
				\ -> MText("text", []),
				[MEditableStep(false)],
				[]
			),
			MStep(
				const("STEP 3"),
				\ -> MText("text", []),
				[MEditableStep(false)],
				[]
			),
			MStep(
				const("STEP 4"),
				\ -> MText("text", []),
				[MEditableStep(true)],
				[MExpanded(expanded)]
			),			
		], selectedId,
		VerticalStepper([StepEditableOnComplete()]),
		[
			MHideCancelButton(),
			MBackButton(_("BACK"), [MGrey(500), MOutlined()], [])
		]
	);

	mrender(manager, true, content);
}