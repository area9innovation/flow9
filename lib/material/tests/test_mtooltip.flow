import material/material2tropic;
import material/material_ui;

main() {
	manager = makeMaterialManager([]);

	openMenu = make(false);

	makeTooltip = \ -> {
		println("createToolip");
		MConstruct([
				\ -> {println("CONSTRUCT"); \ -> println("DISPOSE")}
			],
			MText("MTooltip", [])
		)
	}

	content =
		MTooltip(
			MIconButton("close", \ -> println("close"), [], []),
			MShowLazy(openMenu, makeTooltip),
			// makeTooltip(),
			[MOpenMenu(openMenu)]
		);
	
	mrender(manager, true, content);
}