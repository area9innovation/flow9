	newStack = filterIScriptStackTree(script.stack, \delay, record -> {
		switch (record) {
			IScriptBehaviourRecord(__, __, type, __) : {
				switch (type) {
					ISMouseEvent() : false;
					ISMiscEvent() : false;
					default : true;
				}
			}
			default : true;
		}
	});

