MColsCenterY(items : [Material]) -> Material {
	idxs = enumFromTo(0, length(items) - 1);
	groupHeight = MGroup(
		map(idxs, \idx -> MHeightOf(TGhost("item" + i2s(idx))))
	);

	MLetMany(
		mapi(items, \idx, item -> Pair("item" + i2s(idx), item)),
		MCols(
			map(idxs, \idx ->
				MCenterYIn(
					TDisplay("item" + i2s(idx)),
					groupHeight
				)
			)
		)
	);
}

