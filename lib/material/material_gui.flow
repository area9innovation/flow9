MRemoveMinMetrics(content : Material) -> Material {
	MTransformTAcc(\t2a, pi, ss, mo -> {
		bf = t2a(content, pi, ss, mo);

		TAcc(
			bf.form,
			TFormMetrics(
				bf.metrics.width,
				bf.metrics.height,
				bf.metrics.baseline
			),
			bf.metrics.width,
			bf.metrics.height,
			bf.metrics.width,
			bf.metrics.height,
			zero,
			zero,
			bf.addFillers,
			bf.xConstant,
			bf.yConstant,
			bf.disposers
		)
	})
}

