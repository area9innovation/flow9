MFixSizeKeepBaseline(m : Material, size : Material) -> Material {
	MTransformTAcc(\t2a, pi, ss, mo -> {
		bf = t2a(m, pi, ss, mo);
		sf = t2a(size, pi, ss, mo);

		TAcc(
			bf.form,
			TFormMetrics(
				sf.metrics.width,
				sf.metrics.height,
				bf.metrics.baseline
			),
			sf.minWidth,
			sf.minHeight,
			sf.maxWidth,
			sf.maxHeight,
			sf.xFillers,
			sf.yFillers,
			sf.addFillers,
			sf.xConstant,
			sf.yConstant && isFConst(bf.metrics.baseline),
			sf.disposers
		)
	})
}

