
import tropic/tparagraph;

export {
	primaryTextOpacityDark = 0.87;
	primaryTextOpacity = 0.87;

	secondaryTextOpacity = 0.7;
	disabledTextOpacity = 0.5;

	secondaryTextOpacityDark = 0.6;
	disabledTextOpacityDark = 0.38;

	// [Material Guidelines | Typography Styles](https://www.google.com/design/spec/style/typography.html#typography-styles)
	MFontStyle ::= MFont, MThemedFont;

		MFont(
			size : double,
			family : string,
			lightOpacity : double,
			darkOpacity : double,
			paragraphMargin : ParagraphMargin,
			interlineSpacing : InterlineSpacing
		);

		MThemedFont ::= MH1, MH2, MH3, MH4, MH5, MH6, MSubtitle1, MSubtitle2, MBody1, MBody2, MButton1, MCaption1, MOverline1;
			MH1();
			MH2();
			MH3();
			MH4();
			MH5();
			MH6();
			MSubtitle1();
			MSubtitle2();
			MBody1();
			MBody2();
			MButton1();
			MCaption1();
			MOverline1();

		MDisplay5() -> MFont {
			MFont(96.0, "RobotoLight", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 26.), InterlineSpacing(-5.));
		};
		MDisplay4() -> MFont {
			MFont(60.0, "RobotoLight", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 26.), InterlineSpacing(-5.));
		};
		MDisplay3() ->  MFont {
			MFont(48.0, "Roboto", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 26.), InterlineSpacing(-5.));
		};
		MDisplay2() -> MFont {
			MFont(45.0, "Roboto", secondaryTextOpacity, secondaryTextOpacityDark, ParagraphMargin(0., 26.), InterlineSpacing(-5.));
		};
		MDisplay1() -> MFont {
			MFont(34.0, "Roboto", secondaryTextOpacity, secondaryTextOpacityDark, ParagraphMargin(0., 18.), InterlineSpacing(-2.));
		};
		MDisplay1Medium() -> MFont {
			MFont(34.0, "RobotoMedium", secondaryTextOpacity, secondaryTextOpacityDark, ParagraphMargin(0., 18.), InterlineSpacing(-2.));
		};
		MHeadline() -> MFont {
			MFont(24.0, "Roboto", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 8.), InterlineSpacing(4.));
		};
		MTitle() -> MFont {
			MFont(20.0, "Roboto", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 4.), InterlineSpacing(4.));
		};
		MSubheading() -> MFont {
			MFont(16.0, "Roboto", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 8.), InterlineSpacing(4.));
		};
		MSubtitle() -> MFont {
			MFont(14.0, "Roboto", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 4.), InterlineSpacing(2.));
		};
		MButtonStyle() -> MFont {
			MFont(14.0, "RobotoMedium", 1.0, 1.0, ParagraphMargin(0., 4.), InterlineSpacing(0.));
		};
		MSecondaryButtonStyle() -> MFont {
			MFont(14.0, "RobotoMedium", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 4.), InterlineSpacing(0.));
		};
		MBody() -> MFont {
			MFont(14.0, "Roboto", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 4.), InterlineSpacing(2.));
		};

		MBodyPrimary = MSubheading;

		MListBody() -> MFont {
			MFont(14.0, "Roboto", secondaryTextOpacity, secondaryTextOpacity, ParagraphMargin(0., 4.), InterlineSpacing(2.));
		};
		MBodyBold() -> MFont {
			MFont(14.0, "RobotoMedium", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 4.), InterlineSpacing(2.));
		};
		MCaption() -> MFont {
			MFont(12.0, "Roboto", secondaryTextOpacity, secondaryTextOpacity, ParagraphMargin(0., 4.), InterlineSpacing(0.));
		};

		MCaptionSolid() -> MFont {
			MFont(12.0, "Roboto", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 4.), InterlineSpacing(0.));
		};
		MCaptionColumn() -> MFont {
			MFont(12.0, "RobotoMedium", secondaryTextOpacity, secondaryTextOpacity, ParagraphMargin(0., 4.), InterlineSpacing(0.));
		};
		MCaptionColumnSelected() -> MFont {
			MFont(12.0, "RobotoMedium", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 4.), InterlineSpacing(0.));
		};
		MDataRow() -> MFont {
			MFont(13.0, "Roboto", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 4.), InterlineSpacing(2.));
		};
		MTooltipDesktop() -> MFont {
			MFont(12.0, "RobotoMedium", 1.0, 1.0, ParagraphMargin(0., 0.), InterlineSpacing(0.));
		};
		MOverline() -> MFont {
			MFont(10.0, "Roboto", primaryTextOpacity, primaryTextOpacityDark, ParagraphMargin(0., 0.), InterlineSpacing(0.));
		};

		MCustomFont(size : double, family : string, opacity : double) -> MFont {
			MFont(
				size,
				family,
				opacity,
				opacity,
				ParagraphMargin(0., if (size <= 20.) 4. else if (size < 34.) 8. else if (size < 45.) 18. else 26.),
				InterlineSpacing(if (size <= 12.) 0. else if (size < 16.) 2. else if (size < 34.) 4. else if (size < 45.) -2. else -5.)
			);
		}
}