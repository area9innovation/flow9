makeSubscribeDelayedDispose(t : Transform<?>, delay : int, fn : (?) -> void) -> () -> () -> void {
	timerUns = ref None();
	disposer = ref None();
	subsCounter = ref 0;

	\ -> {
		subsCounter := ^subsCounter + 1;

		eitherFn(
			^timerUns,
			\uns -> {
				uns();
			},
			\ -> {
				if (isNone(^disposer)) {
					u = makeSubscribe(t, fn)();
					disposer :=
						Some(\ -> {
							if (^subsCounter == 0) {
								disposer := None();
								u();
							}
						});
				}
			}
		);

		\ -> {
			subsCounter := ^subsCounter - 1;

			timerUns :=
				Some(interruptibleTimer(delay, \ -> {
					timerUns := None();
					maybeApply(^disposer, apply0);
				}));
		}
	}
}

