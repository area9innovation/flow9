								}
								default: {
									cb = doFuseDynamic(b2);

									subs = ref 1;
									dyn = make(ifn(^dv1, getValue(firstOfPair(cb))));
									updating = ref 0;
									u1 = subscribe2(b1, \b -> {
										if (^updating == 0) {
											updating := ^updating + 1;
