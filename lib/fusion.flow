									subs = ref 1;
									dyn = make(ifn(^dv1, ^dv2));
									disp =
										if (flow(b1) == b2) {
											u = subscribe2(b1, \b -> nextDistinct(dyn, ifn(b, flow(b))));
											\ -> {subs := ^subs - 1; if (^subs == 0) {u(); t.beh ::= FDestroyed();}};
										} else {
											updating = ref 0;
											u1 = subscribe2(b1, \b -> {
												if (^updating == 0) {
													updating := ^updating + 1;
													nextDistinct(dyn, ifn(b, ^dv2));
													updating := ^updating - 1;
