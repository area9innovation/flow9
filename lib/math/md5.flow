crc32(str : string) -> int {
	init = 0xFFFFFFFF;
	polynom = 0xEDB88320;
	crc = ref init;

	bytes = string2utf8(str);
	
	iter(bytes, \x -> {
		tmp = ref bitAnd(bitXor(^crc, x), 0xFF);

		fori(0, 7, \j -> {
			if (bitAnd(^tmp, 1) == 1)
				tmp := bitXor(bitUshr(^tmp, 1), polynom)
			else
				tmp := bitUshr(^tmp, 1);
		});

		crc := bitXor(bitUshr(^crc, 8), ^tmp);
	});

	bitXor(^crc, init)
}
