import tools/orbit/sexpr/sexpr_types;
import text/blueprint;
import string;

export {
	prettySexpr(e : Sexpr) -> string;
}

prettySexpr(e : Sexpr) -> string {
	switch (e) {
		SSBool(b): b2s(b);
		SSConstructor(name): name;
		SSDouble(d): d2s(d);
		SSInt(i): i2s(i);
		SSList(exprs): "(" + superglue(exprs, prettySexpr, " ") + ")";
		SSOperator(op): op;
		SSQuasiQuote(expr): "`" + prettySexpr(expr);
		SSQuote(expr): "'" + prettySexpr(expr);
		SSString(s): toString(s);
		SSUnquote(expr): "$" + prettySexpr(expr);
		SSUnquoteSplicing(expr): "#" + prettySexpr(expr);
		SSVariable(name): name;
	}
}
