// Advanced RunCore test for more complex operations

// Test array operations with calculation
let arr1 = [10, 20, 30, 40, 50];
let idx = 2;
let val = index(arr1, idx);

// Test array subrange
let subarr = subrange(arr1, 1, 3);

// String index operations
let str = "Testing string indexing";
let idx_val = strIndex(str, 4);

// Numeric operations
let a = 15;
let b = 4;
let mod_res = a % b;  // Modulo operation

// Compare values
let cmp = a <=> b;  // Spaceship operator (-1, 0, 1)

// String/array operations
let words = ["This", "is", "a", "test"];
let joined = strGlue(words, " ");

// Test string contains at position
let contains_at = strContainsAt("HelloWorld", 5, "World");

// Test string to char array and back
let char_array = string2ints("ABC");
let str_back = ints2string(char_array);

// Test reversing an array
let reversed = reverse(arr1);

// Test string capitalization
let cap_str = capitalize("test string");
let decap_str = decapitalize("Test String");

// Test type checks
let is_int = isInt(a);
let is_str = isString(str);
let is_arr = isArray(arr1);

// Print results
let res = println("Array value at index " + i2s(idx) + ": " + i2s(val));
res = println("Subarray: " + i2s(subarr));
res = println("String character at index 4: " + idx_val);
res = println("Modulo result: " + i2s(mod_res));
res = println("Compare result: " + i2s(cmp));
res = println("Joined string: " + joined);
res = println("String contains at position: " + i2s(contains_at));
res = println("Character array: " + i2s(char_array));
res = println("String from char array: " + str_back);
res = println("Reversed array: " + i2s(reversed));
res = println("Capitalized string: " + cap_str);
res = println("Decapitalized string: " + decap_str);
res = println("Is integer check: " + i2s(is_int));
res = println("Is string check: " + i2s(is_str));
res = println("Is array check: " + i2s(is_arr));