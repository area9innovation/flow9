// Minimal example to test conditional pattern matching

// Define a factorial function using conditional pattern matching
fn factorial(n) = n is (
  n => 1 if n <= 1;  // Base case with a condition
  n => n * factorial(n - 1)  // Recursive case
);

// Test the factorial function
println("Factorial of 0: " + i2s(factorial(0)));
println("Factorial of 1: " + i2s(factorial(1)));
println("Factorial of 5: " + i2s(factorial(5)));