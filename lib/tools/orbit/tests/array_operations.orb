// Test array operations and functions

// Function to get first element of an array
fn first(arr) = arr[0];

// Function to get last element of an array
fn last(arr) = arr[length(arr) - 1];

// Function to sum all elements in an array
fn sum(arr) = {
  if length(arr) == 0 then
    0
  else
    arr[0] + sum(arr[1:])
};

// Test with some arrays
let numbers = [1, 2, 3, 4, 5];

// Print the array
numbers;

// Test first and last
first(numbers);
last(numbers);

// Test sum function
sum(numbers);