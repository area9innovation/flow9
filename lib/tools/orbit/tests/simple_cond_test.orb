// Simple test for conditional pattern matching

println("Testing simple conditional pattern matching");

// Test with a single if
n = 5;

if n > 0 then (
  println("n is positive")
) else (
  println("n is not positive")
);

// Try a simple match with one condition
match n {
  x => (
    println("n is greater than zero")
  ) if x > 0;
  
  x => (
    println("n is not greater than zero")
  )
}