import string;

export {
	gTag2string(id : string, ctype : string, text : string) -> string;
	xTag2string(wigiId : string, ctype : string) -> string;
}

ctype2string(ctype : string) -> string {
	if (ctype != "")
		" ctype=\"" + ctype + "\""
	else
		""
}

gTag2string(id : string, ctype : string, text : string) -> string {
	formatString("<g id=\"%1\"%2>%3</g>", [id, ctype2string(ctype), text])
}

xTag2string(wigiId : string, ctype : string) -> string {
	formatString("<x id=\"%1\"%2/>", [wigiId, ctype2string(ctype)])
}
