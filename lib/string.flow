parseHex(s : string) -> int {
	stringFold(s, 0, \acc, code -> {
		subtract = \offset -> acc * 16 + (code - offset);
		if (48 <= code && code <= 57) {
			subtract(48);
		} else if (65 <= code && code <= 70) { // A-F
			subtract(55);
		} else if (97 <= code && code <=102) { // a-f
			subtract(87);
		} else {
			acc;
		}
	});
}

