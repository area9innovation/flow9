time2s(tm : double) {
	tmi = trunc(tm / 1000.0);
	hours = tmi / 3600;
	mins  = (tmi - 3600 * hours) / 60;
	secs =  (tmi - 3600 * hours - 60 * mins);

	notZero = \i, s -> if (i > 9) i2s(i) + s else "0" + i2s(i) + s;

	notZero(hours, ":") + notZero(mins, ":") + notZero(secs, "");
}

