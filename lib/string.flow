	if (l <= 1) {
		s;
	} else if (l <= 128) {
		list2string(addReverse(makeList(), s, l - 1));
	} else {
		half = l / 2;
		left = substring(s, 0, half);
		right = substring(s, half, l);
		reverse(right) + reverse(left);
	}
}

