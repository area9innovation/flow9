toCapitalization(s : string) -> string {
	if (toUpperCase(s) != s) {
		endMarks = [".", "!", "?", "...", "\n"];
		separators = concat(["-", ":", ",", "\"", " ", "\xA0;", "\u00A0"], endMarks);
		separatedString = strSplit2(s, separators);
		len = length(separatedString);
		hyphenCase = ref false;

		concatStrings(mapi(separatedString, \i, v -> {
			w = toLowerCase(v);
			isFirstWord = i <= 1 || separatedString[i - 1] == "\n" ||  contains(endMarks, separatedString[i - 2]);
			isLastWord = i >= len - 1 || contains(endMarks, separatedString[i + 1]);
			isSeparator = contains(separators, v);

			res = if ((isFirstWord || isLastWord || ^hyphenCase || !isAuxiliaryWord(w))
					&& !isSeparator) {
				toUpperCase(strLeft(v, 1)) + strRight(w, 1)
			} else {
				w
			};

			if (!isSeparator) {
				hyphenCase := i < len - 1 && separatedString[i + 1] == "-" && (isFirstWord || isLastWord);
			};

			res
		}))
	} else {
		s
	}
}

