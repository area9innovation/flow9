	if (length(seps) == 0) def
	else {
		idxs = map(seps, \sep -> Pair(strLastIndexOf(str, sep), strlen(sep)));
		i = fold(idxs, idxs[0], \acc, idx -> if (acc.first > idx.first) acc else idx);
