	auxiliaryWords = ["a", "an", "and", "as", "at", "but", "by", "down", "for", "from", "in", "into", "near", "nor", "of", "on", "onto", "or", "the", "to", "up", "with"];
	contains(auxiliaryWords, toLowerCase(word));
