		form =
			if (metricsOnly)
				FEmpty()
			else
				FCrop(
					zero,
					zero,
					b.metrics.width,
					c.metrics.height,
					c.form
				);
		TAcc(c with
			form = form,
			minWidth = b.minWidth,
			maxWidth = b.maxWidth,
			metrics = TFormMetrics(c.metrics with width = b.metrics.width),
			xFillers = b.xFillers
		)
	});
}

