			gstyle = tgraphicsStyle2graphicsStyle(style);

			makeFGraphics = \w, h ->
				FMutable(fselect(radius, FLift(\r ->
					FGraphics(
						if (r == 0.)
							rectangle(0., 0., w, h)
						else
							perfectRoundedRect(w, h, r),
						gstyle
					)
				)));

			TAcc(b1 with form =
