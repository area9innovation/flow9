import fabric/fabric;

main() -> void {
	ui = BLets("counter", "0",
		BBCols([
			BTextInput("counter", [], []),
			BTextButton("COUNT", \env -> {
				nextFabricValue(env, "counter", i2s(s2i(getFabricStringValue(env, "counter")) + 1));
			}, [], []),
			BSelects("counter", \env, cnt -> BText("Counter: " + cnt, []))
		])	
	);
	brender(ui);
	{}
}
