import material/material;
import material/material_ui;
import string;

main() {
    mManager = makeMaterialManager([]);
    counter  = make(0);
    
    view = MCenter(MLines([
        MSelect(counter, \m -> MText(i2s(m), [MDisplay2()])),
        MTextButton(_("Count"), \ -> { next(counter, getValue(counter) + 1); }, [], []),
    ]));
    
    mrender(mManager, true, view);
}