import material/extra/raymarching/raymarching;

main() {
	setRendererType("html");

	posTrigger2B = make(RMMouseDownleft());
	position2B = make(RMZ(3.));

	spheres1 = RMSTranslate(
		RMUnion2(
			RMMaterial(RMSTranslate(RMInteractive(RMSphere(make(1.)), posTrigger2B), make(RMY(1.))), RMColor(make(0xFFFF00)), []),
			RMSTranslate(
				RMUnion2(
					RMMaterial(RMSTranslate(RMSphere(make(0.5)), make(RMX(2.))), RMColor(make(0xFF00FF)), []),
					RMMaterial(RMSTranslate(RMSphere(make(0.5)), make(RMX(-2.))), RMColor(make(0x00FFFF)), [])
				),
				make(RMYZ(2., 2.))
			)
		),
		position2B
	);

	spheres2 = RMUnion2(
		RMMaterial(RMSphere(make(0.5)), RMColor(make(0x00FF00)), []),
		RMUnion2(
			RMMaterial(RMSTranslate(RMSphere(make(0.5)), make(RMX(2.))), RMColor(make(0x0000FF)), []),
			RMMaterial(RMSTranslate(RMSphere(make(0.5)), make(RMX(-2.))), RMColor(make(0xFF0000)), [])
		),
	);

	//scene = make(RMSTranslate(RMUnion2(spheres1, spheres2), RMZ(3.)));
	scene = RMUnion2(
		RMSTranslate(RMUnion2(spheres1, spheres2), make(RMZ(3.))),
		RMMaterial(RMPlane(make(RMXYZ(0., 1., 0.))), RMColor(make(0xBBBBBB)), [])
	);
	texture1B = make("");
	texture2B = make("");
	textureParametersB = make(getValue(makeDefaultRMTexture().parameters));
	twistTriggerB = make(RMMouseDownleft());
	twistedTextureParameter = RMTextureParameters(
		RMTextureTilingParameter(1., 2., 1., 1., 2., 1.),
		RMTextureTilingParameter(1., 2.5, 2.6, 2.1, 2., 1.),
		RMTextureTilingParameter(1., 2., 1., 1.5, 2., 1.),
		RMTextureTilingParameter(1., 2., 3., 0.5, 2., 1.)
	);
	trigger1B = make(RMMouseDownleft());
	cylinderColor1B = make(0xAF4DCE);
	trigger2B = make(RMMouseDownleft());
	cylinderColor2B = make(0xAFCD1E);
	posTriggerB = make(RMMouseDownleft());
	positionB = make(RMXYZ(0., 1., 6.));
	radiusB = make(1.);
	triggerCapperTorusB = make(RMMouseDownleft());
	percentB = make(0.5);
	smoothB = make(2.5);

	scene2 = RMUnion([
		RMInteractive(RMSmoothUnion([
			RMCompositeObject(RMSphere(make(0.7)), "Sphere 2", RMColor(make(0x00FFFF)), [], make(RMXYZ(-2., 2., 8.)), make(RMMouseDownleft())),
			RMCompositeObject(RMSphere(make(0.7)), "Sphere 3", RMColor(make(0x00FF00)), [], make(RMXYZ(0., 0., 3.)), make(RMMouseDownleft())),
			RMCompositeObject(RMSphere(make(0.7)), "Sphere 4", RMColor(make(0x0000FF)), [], make(RMXYZ(2., 0., 3.)), make(RMMouseDownleft())),
			RMCompositeObject(RMSphere(make(0.5)), "Sphere 5", RMColor(make(0xFF0000)), [], make(RMXYZ(-2., 0., 3.)), make(RMMouseDownleft())),
			RMCompositeObject(RMSphere(radiusB), "Central sphere", RMColor(make(0xFFFF00)), [RMReflect(make(0.4))], positionB, make(RMMouseDownleft())),
			RMCompositeObject(RMTorus(make(1.), make(0.3)), "Torus", RMColor(make(0xDA8E1F)), [], make(RMXYZ(-4., 2., 8.)), make(RMMouseDownleft())),
		], smoothB), posTriggerB),
		RMCompositeObject(RMBox(make(RMXYZ(0.3, 0.5, 1.))), "Box", RMTexture(makeDefaultRMTexture() with texture = texture1B), [], make(RMXYZ(0., 4., 4.)), make(RMMouseDownleft())),
		RMCompositeObject(RMRoundBox(make(RMXYZ(0.3, 0.5, 1.)), make(0.25)), "Round Box", RMTexture(texture2B, textureParametersB), [], make(RMXYZ(-2., 4., 4.)), twistTriggerB),
		RMCompositeObject(RMPlane(make(RMXYZ(0., 1., 0.))), "Ground Plane", RMColor(make(0xFFFFFF)), [RMReflect(make(0.8))], make(RMXYZ(0., 0., 0.)), make(RMMouseDownleft())),
		RMCompositeObject(RMBoxFrame(make(RMXYZ(0.3, 0.5, 1.)), make(0.1)), "Box Frame", RMTexture(makeDefaultRMTexture() with texture = make("images/splash/splash_innovation_trans.png")), [], make(RMXYZ(2., 4., 4.)), triggerCapperTorusB),
		RMSmoothUnion([
			RMCompositeObject(RMSphere(make(0.5)), "Sphere 1", RMColor(make(0xFF00FF)), [], make(RMXYZ(2., 2., 8.)), make(RMMouseDownleft())),
			RMCompositeObject(RMCappedTorus(make(0.5), make(0.3), percentB), "Capped Torus", RMTexture(make("images/splash/splash_innovation_trans.png"), make(twistedTextureParameter)), [RMReflect(make(0.5))], make(RMXYZ(2., 2., 8.)), make(RMMouseDownleft())),
		], make(0.1)),
		RMCompositeObject(RMCylinder(make(2.), make(0.5)), "Cylinder", RMColor(cylinderColor1B), [], make(RMXYZ(-5., 5., 5.)), trigger1B),
		RMCompositeObject(RMRoundedCylinder(make(2.), make(0.5), make(0.5)), "Cylinder", RMColor(cylinderColor2B), [], make(RMXYZ(-5., 5., 3.)), trigger2B),
	]);

	light = RMPlus(
		RMPlus(
			RMLTranslate(RMLightMaterial(RMLight(0.03), 0x00AAAA), RMXYZ(-2., 8., 3.)),
			RMLTranslate(RMLightMaterial(RMLight(0.05), 0xAA00AA), RMXYZ(0., 8., 6.))
		),
		RMLTranslate(RMLightMaterial(RMLight(0.07), 0xAAAA00), RMXYZ(2., 8., 3.))
	);
	light2 = RMCompositeLight(0.05, "Main light", 0xFFFFFF, RMXYZ(100., 100., 100.));
	
	camera = RMCamera(RMXYZ(6., 8., 6.), RMXYZ(0., 0., 6.));

	mrender(
		makeMaterialManager([]), true,
		
		MConstruct(
			[
				\ -> subscribe2(trigger1B, \t -> if (t == RMMouseDownleft()) next(cylinderColor1B, round(i2d(getValue(cylinderColor1B)) * 1.1))),
				\ -> subscribe2(trigger2B, \t -> switch(t) {
					RMMouseHoverIn(): next(cylinderColor2B, getValue(cylinderColor2B) + 0x111111);
					RMMouseHoverOut(): next(cylinderColor2B, getValue(cylinderColor2B) - 0x111111);
					default : {}
				}),
				\ -> subscribe2(twistTriggerB, \t -> if (t == RMMouseHover()) next(textureParametersB, twistedTextureParameter)),
				\ -> subscribe2(posTriggerB, \t -> if (t == RMMouseDownleft()) {
					next(positionB, addRMCoordinate(getValue(positionB), RMY(0.1)));
					next(radiusB, getValue(radiusB) + 0.005);
					next(smoothB, getValue(smoothB) + 0.025);
				}),
				\ -> subscribe2(posTrigger2B, \t -> if (t == RMMouseDownleft()) next(position2B, addRMCoordinate(getValue(position2B), RMY(0.1)))),
				\ -> subscribe2(triggerCapperTorusB, \t -> switch(t) {
					RMMouseHoverIn(): next(percentB, getValue(percentB) + 0.3);
					RMMouseHoverOut(): next(percentB, getValue(percentB) - 0.3);
					default : {}
				}),
			],
			MLines([
				makeRaymarchingMaterialTexture(MTextButton("SOME BUTTON", nop, [MButtonRaised(), MGreen(900)], []), texture1B),
				makeRaymarchingMaterialTexture(MTextButton("ANOTHER BUTTON", nop, [MButtonRaised(), MRed(900)], []), texture2B),	
				MRaymarching(0, scene2, light2, RMSettings(make(camera), make(true), make(true), make(Pair(PI/180., PI/2.)), make(Pair(PI/180., PI/2.)), make(1.0)))
			])
		)
	)
}