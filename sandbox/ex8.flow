import material/material;
import material/material_manager;
import material/material2tropic;

main() {
    
    manager = makeMaterialManager([]);

    search = make("");

    header = MColsA([
        MFillX(),
        MTextButton(_("LOGIN"), \ -> {}, [], [])

    ]);

    content = 
        MCenter(            
            MAvailable(
                MLinesA([
                    MTextInput(search, [MLabel(_("Search Text")), MFloatingLabel()], []),
                    MColsA([
                        MFillX(),
                        MTextButton(_("SEARCH"), \ -> { println(formatString(_("search string = %1"), [ getValue(search) ])); }, [], [])
                    ])
                ]),
                MFillWY(500.0)));

    footer = MColsA([
        MText(_("FOOTER"), []),
        MFillX(),
        MText(_("Material Rules"), [])
    ]);

    view = MBorder( 8.0, 8.0, 8.0, 8.0,
        MLinesA([
            header,
            content,
            footer
        ]));

    mrender(manager, true, view);
}