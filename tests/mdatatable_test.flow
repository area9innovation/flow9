import material/material2tropic;
import material/material_dialog;

main() {
	manager = makeMaterialManager([]);

	close = make(false);

	m =
		MScroll(
			MDataTable(
				map(enumFromTo(0, 10), \__ -> {
					MColumn("qwdwqdqw", "dwqdqw", 100, [])
				}),
				map(enumFromTo(0, 100), \rd -> {
					map(enumFromTo(0, 10), \data -> {
						MText("<Text Form>", [MCaptionSolid()]);
					})
				}),
				[
					MHeaderActions(
					MColsA([
						MText(i2s(1) + if (true) " item selected" else " items selected", [MSubheading(), getPrimaryColor(manager)]) |> MCenterY,
						TFillX(),
						MIconButton("delete", nop, [], []) |> MCenterY
					])
					|> (\f -> MBorder(16., 0., 16., 0., f))
					|> (\f -> MAvailable(f, TFillXH(56.)))
					|> MDebugMetricsGreen
					, []),
					MPaginationAutoScaling()
				]
			),
			TFillXY(),
			[]
		);

	mrender(manager, true, m)
}