import material/material_ui;

main() {
	manager = makeMaterialManager([]);

	cameraPosition = makePoint3D();

	scene = F3DGLTFLoader("images/3d/monster/Monster.gltf", \an -> iter(an, \a -> { next(a.duration, 3.0); a.start(); }));
	camera =
		F3DPosition(F3DPerspectiveCamera(const(50.0), const(1.0), const(0.01), const(6000.0)), make(Point3D(35.0, 0.0, 200.0)))
		|> (\f -> F3DInspectPosition(f, cameraPosition));
	light = F3DPosition(F3DPointLight(const(white), const(2.0), const(0.0), const(1.0)), cameraPosition);

	M3DStage(
		F3DScene(const([scene, light])),
		camera,
		TFillXY(),
		[]
	)
	|> (\f -> MFrame(0.0, 4.0, [MStroke(getPrimaryColor(manager)), StrokeWidth(2.0)], f))
	|> (\f -> MBorder4(4.0, f))
	|> (\f -> mrender(manager, true, f))
}