import tools/dsl/dsl_parse;

export {
	// Adds string syntax like << ... >>
	defineQuoteString(language : DslLanguage) -> DslLanguage;
}

defineQuoteString(language : DslLanguage) -> DslLanguage {
	// OK, extend this language with the "dot" syntax
	grammar = extendGrammar(language.grammar, "
		atom = atom | '<<' $(!'>>' anychar)* '>>' ws;
	");

	DslLanguage("quotestring", grammar, None(), None(), None(), makeTree(), [], Some(language));
}
