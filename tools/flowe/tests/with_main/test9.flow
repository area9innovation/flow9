Maybe<?> ::= None, Some<?>;
None();
Some(value : ?);


maybeMap(m, f) {
	switch (m : Maybe) {
		None(): None();
		Some(v): Some(f(v));
	}
}

// foo = debugtyping;

pow2(x, n) {
	if ( x == 0.0 ) {
		if (n <= 0) None() else Some(0.0)
	} else {
		if ( n == 0 ) {
			Some(1.0)
		} else if ( n > 0 ) {
			x2 = pow2(x, n/2);
			if (n % 2 == 0) maybeMap(x2, \t -> t*t) else maybeMap(x2, \t -> t*t*x)
		} else {
			maybeMap(pow2(x, -n), \t -> 1.0 / t)
		}
	}
}

