native println : io (flow) -> void = Native.println;

Maybe<?> ::= None, Some<?>;
	None();
	Some(value : ?);


either(m, alternative) {
	switch (m : Maybe) {
		None(): alternative;
		Some(v): v;
	}
}

main() {
	n = None();
	s = Some(1);
	println(s.value);
	println(either(s, 14));
	// The body scope of m is too small here:
	m : Maybe = if (true) s else n;
	println(m ?? { m + 1; } : 0);
	println(switch (m) {
		Some(v): v + 1;
		None(): 0;
	});

//	e = Some(s with value = 2);
//	s;
}
