native println : io (?) -> void = Native.println;

Maybe ::= None, Some;

None();
Some(value : int);

either(m : Maybe, def : int) -> int {
	switch (m) {
		None(): {
			def;
		}
		Some(v): {
			m.value;
		}
	}
}

eitherInc(m : Maybe, def : int) -> int {
	res = switch (m) {
		None(): {
			def;
		}
		Some(v): {
			m.value;
		}
	}
	res + 1;
}

//  TODO: maybe<?>

main() {
	println(either(None(), 0)); // 0
	println(either(Some(1), 0)); // 1

	println(eitherInc(None(), 0)); // 1
	println(eitherInc(Some(1), 0)); // 2
}
