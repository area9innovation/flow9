import tools/flow9/dexp/desugar_env;
import sys/concurrent;

export {
	makeTempDName(d : DDesugar) -> string;
	makeTempDNamePrefix() -> string;
}

makeTempDName(d : DDesugar) -> string {
	atomicRefIntAddition(d.nextId, 1);
	makeTempDNamePrefix() + i2s(^(d.nextId));
}

makeTempDNamePrefix() -> string {
	"_tmp_"
}