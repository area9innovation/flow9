import tools/gringo/griego/griego_types2dsl;
import tools/gringo/griego/griego_parser;
import text/gringo/gringo_typed_action;
import tools/dsl/dsl_parse;

export {
	parseGrTerm(code : string, onError : (string) -> void) -> GrTerm;
}

parseGrTerm(code : string, onError : (string) -> void) -> GrTerm {
	ast = gringoTypedParse(code, dslAction, griego_parse_grammar, DslList(makeList()), onError);
	dslAst2GrTerm(ast);
}
