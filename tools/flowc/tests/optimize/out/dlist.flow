makeDList = \ ->
	DList(DEnd(), DEnd())


pushDList = \list:DList<?>, v:? ->
	la : DNode<?> = list.last;
	switch (la : DNode<?>) {
		DEnd(): {
			node : DLink<?> = DLink(v, DEnd(), DEnd(), true);
			{
				list.first ::= node;
				list.last ::= node;
				node
			}

		}
		DLink(__,__,__,l): {
			{
				la.before;
				{
					la.after;
					l : bool = la.attached;
					node : DLink<?> = DLink(v, la, DEnd(), l);
					{
						la.after ::= node;
						list.last ::= node;
						node
					}

				}

			}

		}
	}


concatDList = \l1:DList<?>, l2:DList<?> ->
	la : DNode<?> = l1.last;
	switch (la : DNode<?>) {
		DEnd(): {
			{
				l1.first ::= l2.first;
				l1.last ::= l2.last
			}

		}
		DLink(__,__,__,__): {
			{
				la.before;
				{
					la.after;
					{
						la.attached;
						gsymswitch0 : DNode<?> = l2.first;
						switch (gsymswitch0 : DNode<?>) {
							DEnd(): {
								{}
							}
							DLink(__,__,__,__): {
								{
									gsymswitch0.before;
									{
										gsymswitch0.after;
										{
											gsymswitch0.attached;
											{
												cast(l2.first : DNode<?> -> DLink<?>).before ::= la;
												la.after ::= l2.first;
												l1.last ::= l2.last
											}

										}

									}

								}

							}
						}
					}

				}

			}

		}
