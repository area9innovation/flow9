splitBy(a : [?], len : int) -> [[?]] {
	elementsCount = length(a);
	subArraysCount = elementsCount / len + (if (elementsCount % len == 0) 0 else 1);
	generate(0, subArraysCount, \i -> subrange(a, i * len, len))
}

