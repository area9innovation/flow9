threadApplyDeferred(input, array) {
	len = length(array);
	if (len > 0) {
		// println("Calls remaining: " + toString(len));
		curFn = array[0];
		array2 = subrange(array, 1, len - 1);
		curFn(input, \output -> deferred(\-> { threadApplyDeferred(output, array2) }));
	}
}

