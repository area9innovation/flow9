
import runtime;
import ds/array;

d2s(d) { cast(d : double -> string); }
i2s(i) { cast(i : int -> string); }

FlowStruct(
	id : int,
	email : string,
	firstName : string,
	lastName : string,
	valid : bool,
	avatar : string,
	phone : string,
);


makeDummyStruct(id : int) -> FlowStruct {
	FlowStruct(
		id,
		"test" + i2s(id) + "@test.test", // email
		"Name", // firstName
		"UID" + i2s(id), // lastName
		true, // valid
		"link_" + d2s(random()), // avatar
		"", // phone
	);
}

consume(arr : [FlowStruct]) -> void {
	if (arr != []) {
		println(arr[0].id);
		// gc is slow !
		gc(); // 379mb with gc vs 574mb without
		consume(tail(arr));
	}
}

main() {
	s = "Hello, World!";
	arr = generate(1, 1000001, makeDummyStruct);
	consume(arr);
	quit(0);
}