#!/bin/bash

set -e

if [ `uname` == Darwin ]; then
    READLINK=greadlink
else
    READLINK=readlink
fi

SCRIPT_FN=`$READLINK -e "$0"`
SCRIPT_DIR=`dirname "$SCRIPT_FN"`

BASE_DIR=`$READLINK -e "$SCRIPT_DIR/.."`
BUILD_DIR=$BASE_DIR/src/java/build

# Compile the runtime
pushd $BASE_DIR/src/java
javac -d $BUILD_DIR -g com/area9innovation/flow/*.java com/area9innovation/flow/javafx/*.java
popd

# Generate the Java for our program
flowc1 $@ java=javagen

# Compile the generated code
javac -Xlint:unchecked -encoding UTF-8 -cp $BUILD_DIR javagen/com/area9innovation/flow/*.java

# Run the program!
java -cp javagen:$BUILD_DIR:. com.area9innovation.flow.javafx.FxLoader
