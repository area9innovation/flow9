#!/bin/bash

set -e

if [ `uname` == Darwin ]; then
    READLINK=greadlink
else
    READLINK=readlink
fi

SCRIPT_FN=`$READLINK -e "$0"`
SCRIPT_DIR=`dirname "$SCRIPT_FN"`

BASE_DIR=`$READLINK -e "$SCRIPT_DIR/.."`

try_path() {
    if [ -f "$1" ]; then
	EXE_PATH="$1"
    fi
}

if [ `uname` == Darwin ]; then
	EXE_PATH="$BASE_DIR/QtByteRunner/bin/mac/QtByteRunner.app/Contents/MacOS/QtByteRunner"
else
	EXE_PATH="$BASE_DIR/QtByteRunner/bin/linux/QtByteRunner"

	try_path "$BASE_DIR/QtByteRunner-build-release/QtByteRunner"
fi

exec "$EXE_PATH" "$@"
